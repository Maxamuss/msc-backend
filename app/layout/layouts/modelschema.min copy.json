{
    "list": {
        "layout": [
            {
                "component": "header",
                "config": {
                    "title": "Models",
                    "tools": [
                        {
                            "component": "button",
                            "config": {
                                "text": "Add Model",
                                "uri": "modelschema:create",
                                "icon": "PlusCircleIcon"
                            }
                        }
                    ]
                }
            },
            {
                "component": "table",
                "config": {
                    "fields": [
                        {
                            "field_name": "name",
                            "verbose_name": "Model Name"
                        }
                    ],
                    "model": "modelschema"
                }
            }
        ]
    },
    "edit": {
        "layout": [
            {
                "component": "header",
                "config": {
                    "title": "{{ name }}",
                    "tools": [
                        {
                            "component": "button",
                            "config": {
                                "text": "Delete Model",
                                "uri": "modelschema:delete",
                                "icon": "ViewGridAddIcon"
                            }
                        }
                    ]
                }
            },
            {
                "component": "tabs",
                "config": {
                    "tabs": [
                        "Definition",
                        "Fields",
                        "Pages",
                        "Workflows",
                        "Permissions"
                    ],
                    "components": [
                        {
                            "component": "form",
                            "config": {
                                "action": "patch",
                                "model": "modelschema",
                                "uri": "modelschema:edit:${id}",
                                "fields": [
                                    {
                                        "field_name": "name",
                                        "label": "Model Name",
                                        "widget": "TextField",
                                        "required": true
                                    }
                                ]
                            }
                        },
                        {
                            "component": "inline",
                            "config": {
                                "fields": [
                                    {
                                        "field_name": "name",
                                        "verbose_name": "Field Name",
                                        "sortable": true,
                                        "default_sorting": null
                                    },
                                    {
                                        "field_name": "class_name",
                                        "verbose_name": "Class Name",
                                        "sortable": true,
                                        "default_sorting": null
                                    }
                                ],
                                "model": "fieldschema",
                                "related_model": "modelschema:${id}",
                                "modal": {
                                    "id": "49a25bf4-24ea-448c-b21a-9aa0c2d59c65",
                                    "component": "core@model-field-form",
                                    "config": {
                                        "model": "fieldschema"
                                    }
                                }
                            }
                        },
                        {
                            "component": "table",
                            "config": {
                                "fields": [
                                    {
                                        "field_name": "page_name",
                                        "verbose_name": "Page Name",
                                        "sortable": true,
                                        "default_sorting": null
                                    }
                                ],
                                "model": "page",
                                "related_model": "modelschema:${id}"
                            }
                        },
                        {
                            "component": "column",
                            "config": {
                                "children": [
                                    {
                                        "component": "button",
                                        "config": {
                                            "text": "Create Workflow",
                                            "icon": "ViewGridAddIcon",
                                            "uri": "workflow:create"
                                        }
                                    },
                                    {
                                        "id": "49a25bf4-24ea-448c-b21a-9aa0c2d59c58",
                                        "component": "table",
                                        "config": {
                                            "actions": [],
                                            "filters": [],
                                            "search": {
                                                "enabled": false
                                            },
                                            "fields": [
                                                {
                                                    "field_name": "workflow_name",
                                                    "verbose_name": "Workflow Name",
                                                    "sortable": true,
                                                    "default_sorting": null
                                                }
                                            ],
                                            "model": "workflow",
                                            "related_model": "modelschema:${id}",
                                            "link_uri": "workflow:edit:${id}"
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "component": "container",
                            "config": {}
                        }
                    ]
                }
            }
        ]
    },
    "create": {
        "layout": [
            {
                "component": "header",
                "config": {
                    "title": "Create Model"
                }
            },
            {
                "component": "form",
                "config": {
                    "model": "modelschema",
                    "fields": [
                        {
                            "field_name": "name",
                            "label": "Model Name",
                            "widget": "TextField",
                            "required": true
                        }
                    ],
                    "submit_button_text": "Create Model"
                }
            }
        ]
    }
}