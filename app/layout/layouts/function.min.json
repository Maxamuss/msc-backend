{
    "list": {
        "layout": [
            {
                "component": "header",
                "config": {
                    "title": "Functions",
                    "subtitle": "Functions that you have defined to use in your application.",
                    "tools": [
                        {
                            "component": "button",
                            "config": {
                                "text": "Add Function",
                                "uri": "${model}:create",
                                "icon": "ViewGridAddIcon"
                            }
                        }
                    ]
                }
            },
            {
                "component": "table",
                "config": {
                    "model": "function",
                    "fields": [
                        {
                            "field_name": "function_name",
                            "verbose_name": "Function Name"
                        }
                    ]
                }
            }
        ]
    },
    "create": {
        "layout": [
            {
                "component": "header",
                "config": {
                    "title": "Create Function"
                }
            },
            {
                "component": "form",
                "config": {
                    "model": "function",
                    "uri": "function:edit:${id}",
                    "fields": [
                        {
                            "field_name": "function_name",
                            "label": "Function Name",
                            "widget": "TextField",
                            "required": true
                        }
                    ],
                    "submit_button_text": "Create Function"
                }
            }
        ]
    },
    "edit": {
        "layout": [
            {
                "component": "header",
                "config": {
                    "title": "{{ function_name }}",
                    "subtitle": "{{ id }}",
                    "tools": [
                        {
                            "component": "button",
                            "config": {
                                "text": "Delete Function",
                                "icon": "ViewGridAddIcon",
                                "uri": "function:delete:${id}"
                            }
                        }
                    ]
                }
            },
            {
                "component": "form",
                "config": {
                    "model": "function",
                    "action": "patch",
                    "fields": [
                        {
                            "field_name": "function_name",
                            "label": "Function Name",
                            "widget": "TextField",
                            "required": true
                        }
                    ]
                }
            }
        ]
    },
    "delete": {
        "layout": [
            {
                "component": "header",
                "config": {
                    "title": "Delete Function: {{ function_name }}",
                    "subtitle": "{{ id }}"
                }
            }
        ]
    }
}