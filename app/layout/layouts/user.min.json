{
    "list": {
        "layout": [
            {
                "component": "header",
                "config": {
                    "title": "Users",
                    "tools": [
                        {
                            "component": "button",
                            "config": {
                                "text": "Add User",
                                "icon": "ViewGridAddIcon",
                                "uri": "${model}:create"
                            }
                        }
                    ]
                }
            },
            {
                "component": "table",
                "config": {
                    "fields": [
                        {
                            "field_name": "first_name",
                            "verbose_name": "First Name",
                            "sortable": true,
                            "default_sorting": null
                        },
                        {
                            "field_name": "last_name",
                            "verbose_name": "Last Name",
                            "sortable": true,
                            "default_sorting": null
                        },
                        {
                            "field_name": "email",
                            "verbose_name": "Email",
                            "sortable": true,
                            "default_sorting": null
                        }
                    ],
                    "model": "user"
                }
            }
        ]
    },
    "create": {
        "layout": [
            {
                "component": "header",
                "config": {
                    "title": "Add User"
                }
            },
            {
                "component": "form",
                "config": {
                    "model": "user",
                    "submit_button_text": "Create User",
                    "uri": "${model}:edit:${id}",
                    "fields": [
                        {
                            "field_name": "email",
                            "label": "Email",
                            "widget": "TextField",
                            "required": true,
                            "default": null,
                            "help_text": null,
                            "placeholder": null,
                            "layout": {
                                "flex": true,
                                "full_width": false
                            }
                        },
                        {
                            "field_name": "first_name",
                            "label": "First Name",
                            "widget": "TextField",
                            "required": true,
                            "default": null,
                            "help_text": null,
                            "placeholder": null,
                            "layout": {
                                "flex": true,
                                "full_width": false
                            }
                        },
                        {
                            "field_name": "last_name",
                            "label": "Last Name",
                            "widget": "TextField",
                            "required": true,
                            "default": null,
                            "help_text": null,
                            "placeholder": null,
                            "layout": {
                                "flex": true,
                                "full_width": false
                            }
                        }
                    ]
                }
            }
        ]
    },
    "edit": {
        "layout": [
            {
                "component": "header",
                "config": {
                    "title": "Edit User: {{ email }}"
                }
            },
            {
                "component": "form",
                "config": {
                    "save_button_text": "Save",
                    "model": "user",
                    "fields": [
                        {
                            "field_name": "email",
                            "label": "Email",
                            "widget": "TextField",
                            "required": true,
                            "default": null,
                            "help_text": null,
                            "placeholder": null,
                            "layout": {
                                "flex": true,
                                "full_width": false
                            }
                        },
                        {
                            "field_name": "first_name",
                            "label": "First Name",
                            "widget": "TextField",
                            "required": true,
                            "default": null,
                            "help_text": null,
                            "placeholder": null,
                            "layout": {
                                "flex": true,
                                "full_width": false
                            }
                        },
                        {
                            "field_name": "last_name",
                            "label": "Last Name",
                            "widget": "TextField",
                            "required": true,
                            "default": null,
                            "help_text": null,
                            "placeholder": null,
                            "layout": {
                                "flex": true,
                                "full_width": false
                            }
                        }
                    ]
                }
            }
        ]
    }
}