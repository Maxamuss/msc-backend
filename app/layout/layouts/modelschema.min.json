{
    "list": {
        "layout": [
            {
                "component": "header",
                "config": {
                    "title": "Models",
                    "tools": [
                        {
                            "component": "button",
                            "config": {
                                "text": "Add Model",
                                "uri": "modelschema:create",
                                "icon": "PlusCircleIcon"
                            }
                        }
                    ]
                }
            },
            {
                "component": "table",
                "config": {
                    "fields": [
                        {
                            "field_name": "name",
                            "verbose_name": "Model Name"
                        }
                    ],
                    "model": "modelschema"
                }
            }
        ]
    },
    "edit": {
        "layout": [
            {
                "component": "header",
                "config": {
                    "title": "{{ name }}",
                    "tools": [
                        {
                            "component": "button",
                            "config": {
                                "text": "Delete Model",
                                "uri": "modelschema:delete",
                                "icon": "ViewGridAddIcon"
                            }
                        }
                    ]
                }
            }
        ]
    },
    "create": {
        "layout": [
            {
                "component": "header",
                "config": {
                    "title": "Create Model"
                }
            },
            {
                "component": "form",
                "config": {
                    "model": "modelschema",
                    "fields": [
                        {
                            "field_name": "name",
                            "label": "Model Name",
                            "widget": "TextField",
                            "required": true
                        }
                    ],
                    "uri": "${model}:edit:${id}",
                    "submit_button_text": "Create Model"
                }
            }
        ]
    }
}