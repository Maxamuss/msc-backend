{
    "list": {
        "layout": [
            {
                "component": "header",
                "config": {
                    "title": "Models",
                    "tools": [
                        {
                            "component": "button",
                            "config": {
                                "text": "Add Model",
                                "uri": "modelschema:create",
                                "icon": "PlusCircleIcon"
                            }
                        }
                    ]
                }
            },
            {
                "component": "table",
                "config": {
                    "fields": [
                        {
                            "field_name": "name",
                            "verbose_name": "Model Name"
                        }
                    ],
                    "model": "modelschema"
                }
            }
        ]
    },
    "edit": {
        "layout": [
            {
                "component": "header",
                "config": {
                    "title": "{{ name }}",
                    "tools": [
                        {
                            "component": "button",
                            "config": {
                                "text": "Delete Model",
                                "uri": "modelschema:delete",
                                "icon": "TrashIcon"
                            }
                        }
                    ]
                }
            },
            {
                "component": "tabs",
                "config": {
                    "tabs": [
                        "Definition",
                        "Fields",
                        "Pages",
                        "Workflows",
                        "Permissions"
                    ],
                    "panels": [
                        {
                            "component": "form",
                            "config": {
                                "action": "patch",
                                "model": "modelschema",
                                "uri": "modelschema:edit:${id}",
                                "fields": [
                                    {
                                        "field_name": "name",
                                        "label": "Model Name",
                                        "widget": "TextField"
                                    }
                                ]
                            }
                        },
                        {
                            "component": "column",
                            "config": {
                                "children": [
                                    {
                                        "component": "header",
                                        "config": {
                                            "title": "Model Fields",
                                            "subtitle": "Fields defined for this model"
                                        }
                                    },
                                    {
                                        "component": "inline",
                                        "config": {
                                            "fields": [
                                                {
                                                    "field_name": "name",
                                                    "verbose_name": "Field Name",
                                                    "sortable": true,
                                                    "default_sorting": null
                                                },
                                                {
                                                    "field_name": "class_name",
                                                    "verbose_name": "Class Name",
                                                    "sortable": true,
                                                    "default_sorting": null
                                                }
                                            ],
                                            "model": "fieldschema",
                                            "related_model": "modelschema:${id}",
                                            "modal": {
                                                "component": "core@model-field-form",
                                                "config": {
                                                    "model": "fieldschema"
                                                }
                                            }
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "component": "column",
                            "config": {
                                "children": [
                                    {
                                        "component": "header",
                                        "config": {
                                            "title": "Pages",
                                            "subtitle": "Pages defined for this model",
                                            "tools": [
                                                {
                                                    "component": "button",
                                                    "config": {
                                                        "text": "Create Page",
                                                        "icon": "PlusCircleIcon",
                                                        "uri": "page:create"
                                                    }
                                                }
                                            ]
                                        }
                                    },
                                    {
                                        "component": "table",
                                        "config": {
                                            "fields": [
                                                {
                                                    "field_name": "page_name",
                                                    "verbose_name": "Page Name",
                                                    "sortable": true,
                                                    "default_sorting": null
                                                }
                                            ],
                                            "model": "page",
                                            "related_model": "modelschema:${id}"
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "component": "column",
                            "config": {
                                "children": [
                                    {
                                        "component": "header",
                                        "config": {
                                            "title": "Workflows",
                                            "subtitle": "Workflows defined for this model",
                                            "tools": [
                                                {
                                                    "component": "button",
                                                    "config": {
                                                        "text": "Create Workflow",
                                                        "icon": "PlusCircleIcon",
                                                        "uri": "workflow:create"
                                                    }
                                                }
                                            ]
                                        }
                                    },
                                    {
                                        "component": "table",
                                        "config": {
                                            "fields": [
                                                {
                                                    "field_name": "workflow_name",
                                                    "verbose_name": "Workflow Name",
                                                    "sortable": true,
                                                    "default_sorting": null
                                                }
                                            ],
                                            "model": "workflow",
                                            "related_model": "modelschema:${id}",
                                            "uri": "workflow:edit:${id}"
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "component": "header",
                            "config": {
                                "title": "Permissions"
                            }
                        }
                    ]
                }
            }
        ]
    },
    "create": {
        "layout": [
            {
                "component": "header",
                "config": {
                    "title": "Create Model"
                }
            },
            {
                "component": "form",
                "config": {
                    "model": "modelschema",
                    "fields": [
                        {
                            "field_name": "name",
                            "label": "Model Name",
                            "widget": "TextField",
                            "required": true
                        }
                    ],
                    "uri": "modelschema:edit:${id}",
                    "submit_button_text": "Create Model"
                }
            }
        ]
    }
}